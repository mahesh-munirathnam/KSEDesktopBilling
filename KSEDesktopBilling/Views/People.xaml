<UserControl x:Class="KSEDesktopBilling.Views.People"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KSEDesktopBilling.Views"
             xmlns:vm="clr-namespace:KSE.ViewModels;assembly=KSE.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="300">
    <UserControl.InputBindings>
        <KeyBinding Key="Enter" Command="{Binding AddNameCommand}"/>
    </UserControl.InputBindings>

    <StackPanel>
        <Label Content="First Name: "></Label>
        <TextBox Text="{Binding txtFName, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <Label Content="Last Name: "></Label>
        <TextBox Text="{Binding txtLname, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <Label Content="Full Name: "></Label>
        <Label Content="{Binding lblFullName}"></Label>
        <ListBox ItemsSource="{Binding Names}" Height="200" Margin="5"/>
        <Button Command="{Binding AddNameCommand}" Margin="5">Add Name</Button>
    </StackPanel>

</UserControl>
